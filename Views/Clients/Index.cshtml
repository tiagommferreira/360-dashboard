<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Clients
        <small>Control panel</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Clients</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <!-- Small boxes (Stat box) -->
   
    <div class="row">
        <div class="col-lg-12 col-xs-12">
            <table id="clients_table" class="display" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <td>Client</td>
                        <td>Name</td>
                        <td>NIF</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var x in ViewBag.Clientes)
                    {
                        <tr>
                            <td>
                                @((x.CodCliente == null) ? "n/a" : x.CodCliente)
                            </td>
                            <td>
                                @((x.NomeCliente == null) ? "n/a" : x.NomeCliente)
                            </td>
                            <td>
                                @((x.NumContribuinte == null) ? "n/a" : x.NumContribuinte)
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div><!-- ./col -->
    </div><!-- /.row -->

</section><!-- /.content -->


<script>
    $(document).ready(function () {
        $('#clients_table').DataTable();
        });
</script>
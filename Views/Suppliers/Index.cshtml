<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Suppliers
        <small>Control panel</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Suppliers</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <!-- Small boxes (Stat box) -->
   
    <div class="row">
        <div class="col-lg-12 col-xs-12">
            <table id="clients_table" class="display" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <td>Supplier</td>
                        <td>Name</td>
                        <td>NIF</td>
                        <td>Address</td>
                        <td>Tel</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var x in ViewBag.Fornecedores)
                    {
                        <tr>
                            <td>
                                @((x.CodForn == null) ? "n/a" : x.CodForn)
                            </td>
                            <td>
                                @((x.Nome == null) ? "n/a" : x.Nome)
                            </td>
                            <td>
                                @((x.NumContribuinte == null) ? "n/a" : x.NumContribuinte)
                            </td>
                            <td>
                                @((x.Morada == null) ? "n/a" : x.Morada)
                            </td>
                            <td>
                                @((x.Tel == null) ? "n/a" : x.Tel)
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div><!-- ./col -->
    </div><!-- /.row -->

</section><!-- /.content -->


<script>
    $(document).ready(function () {
        $('#clients_table').DataTable();
        });
</script>